{% extends 'homebase.html.twig' %}


{% set name = 'Cars' %}
{% block title %}{{ name }}{% endblock %}
{% block description %}{{ setting.description }}{% endblock %}
{% block keywords %}{{ setting.keywords }}{% endblock %}


{% block body %}
    <section id="page-title-area" class="section-padding overlay">
        <div class="container">
            <div class="row">
                <!-- Page Title Start -->
                <div class="col-lg-12">
                    <div class="section-title  text-center">
                        <h2>{{ name }}</h2>
                        <span class="title-line"><i class="fa fa-car"></i></span>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
                    </div>
                </div>
                <!-- Page Title End -->
            </div>
        </div>
    </section>
    <section id="lgoin-page-wrap" class="section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    {{ include('user/menu.html.twig') }}
                </div>
                <div class="col-lg-9">
                    <div class="popular-cars-wrap">
                    <!-- Filtering Menu -->
                    <div class="popucar-menu text-center" style="margin-top: 0;">
                        <a href="#" data-filter="*" class="active">all</a>
                        {% for category in allCategory %}
                            <a href="#" data-filter=".{{ category.title | lower }}">{{ category.title }}</a>
                        {% endfor %}
                    </div>
                    <!-- Filtering Menu -->

                    <!-- Car List Content Start -->

                    <div class="col-lg-12">
                        <div class="car-list-content">
                            <div class="row popular-car-gird">
                                <!-- Single Car Start -->
                                {% for cat in category %}
                                <div class="col-lg-6 col-md-6 {{ cat.category | lower }}" style="margin-top: 20px;">
                                    <div class="single-car-wrap">
                                        <div class="car-list-thumb car-thumb-1" style="background-image: url({{ asset('uploads/images/') ~ cat.image }})">
                                            <div class="p-car-thumbnails">
                                                <a class="car-hover" href="{{ asset('uploads/images/') ~ cat.image }}">
                                                    <img src="{{ asset('uploads/images/') ~ cat.image }}" style="height: 300px;" alt="JSOFT">
                                                </a>
                                            </div>
                                        </div>
                                        <div class="car-list-info without-bar">
                                            <h2><a href="/car-detail/{{ cat.id }}">{{ cat.title }}</a></h2>
                                            <h5>${{ cat.price }} Rent / per a day</h5>
                                            <p>{{ cat.detail | raw | striptags | slice(0, 100) }}</p>
                                            <ul class="car-info-list">
                                                <li>{{ cat.doors }} Seats</li>
                                                <li>{{ cat.fuel }}</li>
                                                <li>{{ cat.gearbox }}</li>
                                            </ul>
                                            <p class="rating">
                                                {% for i in 1..5 %}
                                                    {% if i <= cat.star %}
                                                        <i class="fa fa-star" style="color:#ffd000;"></i>
                                                    {% else %}
                                                        <i class="fa fa-star unmark" style="color:#ddd;"></i>
                                                    {% endif %}
                                                {% endfor %}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <!-- Single Car End -->
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    <!-- Car List Content End -->
                </div>


                </div>
            </div>
        </div>
    </section>
{% endblock %}
