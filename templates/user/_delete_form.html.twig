<form method="post" action="{{ path('user_delete', {'id': app.user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ app.user.id) }}">
    {% if style is defined %}
        <button style="border:0;background-color:transparent;"><i class="ik ik-ik ik-trash-2 f-8 text-red"></i></button>
    {% else %}
        <button class="btn btn-dark"><i class="ik ik-ik ik-trash-2 f-8"></i>Delete</button>
    {% endif %}
</form>
