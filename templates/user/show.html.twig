{% extends 'homebase.html.twig' %}

{% set name = 'Profile' %}
{% block title %}{{ name }}{% endblock %}
{% block description %}{{ setting.description }}{% endblock %}
{% block keywords %}{{ setting.keywords }}{% endblock %}


{% block body %}
    <section id="page-title-area" class="section-padding overlay">
        <div class="container">
            <div class="row">
                <!-- Page Title Start -->
                <div class="col-lg-12">
                    <div class="section-title  text-center">
                        <h2>{{ name }}</h2>
                        <span class="title-line"><i class="fa fa-car"></i></span>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
                    </div>
                </div>
                <!-- Page Title End -->
            </div>
        </div>
    </section>
<section id="lgoin-page-wrap" class="section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                {{ include('user/menu.html.twig') }}
            </div>
            <div class="col-lg-8">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{% if flag == 1 %}{{ app.user.id }}{% else %}{{ user.id }}{% endif %}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{% if flag == 1 %}{{ app.user.name }}{% else %}{{ user.name }}{% endif %}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{% if flag == 1 %}{{ app.user.lastname }}{% else %}{{ user.lastname }}{% endif %}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>
                    {% if flag == 1 %}
                        <a href="mailto:{{ app.user.email }}" style="text-decoration: underline;">{{ app.user.email }}</a>
                    {% else %}
                        <a href="mailto:{{ user.email }}" style="text-decoration: underline;">{{ user.email }}</a>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{% if flag == 1 %}{{ app.user.roles ? app.user.roles|json_encode : ''  }}{% else %}{{ user.roles ? user.roles|json_encode : ''  }}{% endif %}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src = "{% if flag == 1 %}{{ asset('uploads/images/') ~ app.user.image }}{% else %}{{ asset('uploads/images/') ~ user.image }}{% endif %}" width="200" height="200"></td>
            </tr>
            <tr>
                <th>Status</th>
                <td>
                    {% if flag == 1 %}
                        {{ app.user.status ? "<label class='badge badge-success'>True</label>" : "<label class='badge badge-danger'>False</label>" }}
                    {% else %}
                        {{ user.status ? "<label class='badge badge-success'>True</label>" : "<label class='badge badge-danger'>False</label>" }}
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>
    {% if flag == 1 %}
        <a href="{{ path('user_edit', {'id': app.user.id}) }}"><button class="btn btn-dark"><i class="ik ik-edit-2"></i>edit</button></a><br><br>
    {% endif %}
            </div>
    </div>
</div>
</section>
{% endblock %}
