{% extends 'base.html.twig' %}

{% block title %}Cart{% endblock %}

{% block body %}
    <h1>Cart</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cart.id }}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ cart.userid }}</td>
            </tr>
            <tr>
                <th>Carid</th>
                <td>{{ cart.carid }}</td>
            </tr>
            <tr>
                <th>Pickupdate</th>
                <td>{{ cart.pickupdate ? cart.pickupdate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Returndate</th>
                <td>{{ cart.returndate ? cart.returndate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ cart.status ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ cart.createdAt ? cart.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ cart.updatedAt ? cart.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('cart_index') }}">back to list</a>

    <a href="{{ path('cart_edit', {'id': cart.id}) }}">edit</a>

    {{ include('cart/_delete_form.html.twig') }}
{% endblock %}
