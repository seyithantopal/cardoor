<html>
<head>
    <link href="https://fonts.googleapis.com/css?family=Nunito+Sans:300,400,600,700,800" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('assets') }}/admin/plugins/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('assets') }}/admin/dist/css/theme.min.css">
    <link rel="stylesheet" href="{{ asset('assets') }}/admin/plugins/ionicons/dist/css/ionicons.min.css">
    <link rel="stylesheet" href="{{ asset('assets') }}/admin/plugins/icon-kit/dist/css/iconkit.min.css">

    <link rel="icon" href="{{ asset('assets') }}/admin/favicon.ico" type="image/x-icon" />
    <title>Login | {{ setting.title }}</title>
    <meta name="description" content="{{ setting.description }}">
    <meta name="keywords" content="{{ setting.keywords }}">

</head>
<body>
<div class="auth-wrapper">
    <div class="container-fluid h-100">
        <div class="row flex-row h-100 bg-white">
            <div class="col-xl-8 col-lg-6 col-md-5 p-0 d-md-block d-lg-block d-sm-none d-none">
                <div class="lavalite-bg" style="background-image: url('{{ asset('assets') }}/admin/img/auth/login-bg.jpg')">
                    <div class="lavalite-overlay"></div>
                </div>
            </div>
            <div class="col-xl-4 col-lg-6 col-md-7 my-auto p-0">
                <div class="authentication-form mx-auto">
                    <div class="logo-centered">
                        <a href="/"><img src="{{ asset('assets') }}/admin/src/img/brand.svg" alt=""></a>
                    </div>
                    <h3>Sign In to ThemeKit</h3>

                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}" style="text-decoration: underline;">Logout</a>
                            </div>
                        {% endif %}

                        <label for="inputEmail">Email</label>
                        <div class="form-group">
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus placeholder="Email">
                            <i class="ik ik-user"></i>
                        </div>

                        <label for="inputPassword">Password</label>
                        <div class="form-group">
                            <input type="password" name="password" id="inputPassword" class="form-control" required>
                            <i class="ik ik-lock"></i>
                        </div>

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}">

                        {#
                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                            See https://symfony.com/doc/current/security/remember_me.html

                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Remember me
                                </label>
                            </div>
                        #}
                        <div class="row">
                            <div class="col text-left">
                                <label class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="item_checkbox" name="item_checkbox" value="option1">
                                    <span class="custom-control-label">&nbsp;Remember Me</span>
                                </label>
                            </div>
                            <div class="col text-right">
                                <a href="forgot-password.html">Forgot Password ?</a>
                            </div>
                        </div>
                        <div class="sign-btn text-left">
                            <button class="btn btn-theme" type="submit">Sign In</button>
                        </div>
                    </form>
                    <div class="register">
                        <p>Don't have an account? <a href="/register"><b>Create an account</b></a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>