{% extends 'homebase.html.twig' %}


{% set name = 'Cars' %}
{% block title %}{{ name }}{% endblock %}
{% block description %}{{ setting.description }}{% endblock %}
{% block keywords %}{{ setting.keywords }}{% endblock %}

{% block body %}
    <section id="page-title-area" class="section-padding overlay">
        <div class="container">
            <div class="row">
                <!-- Page Title Start -->
                <div class="col-lg-12">
                    <div class="section-title  text-center">
                        <h2>{{ name }}</h2>
                        <span class="title-line"><i class="fa fa-car"></i></span>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
                    </div>
                </div>
                <!-- Page Title End -->
            </div>
        </div>
    </section>
    <section id="lgoin-page-wrap" class="section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    {% include('user/menu.html.twig') %}
                </div>
                <div class="col-lg-9">

                        <a href="{{ path('user_image_new') }}"><button class="btn btn-info"><i class="ik ik-share"></i>Create new</button></a><br><br>


                    <table class="table">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Image</th>
                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for image in images %}
                            <tr>
                                <td>{{ image.id }}</td>
                                <td>{{ image.title }}</td>
                                <td><img src = "{{ asset('uploads/images/') ~ image.image }}" width="150" height="100"></td>
                                <td>
                                    <div class="table-actions" style="text-align:left;">
                                        <a>{{ include('image/_delete_form.html.twig', {'style': 'ik ik-edit f-16 mr-15 text-green'}) }}</a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
