{% extends 'homebase.html.twig' %}


{% block title %}Order | {{ setting.title }}{% endblock %}
{% block description %}{{ setting.description }}{% endblock %}
{% block keywords %}{{ setting.keywords }}{% endblock %}

{% block body %}
    <section id="page-title-area" class="section-padding overlay">
        <div class="container">
            <div class="row">
                <!-- Page Title Start -->
                <div class="col-lg-12">
                    <div class="section-title  text-center">
                        <h2>Order Index</h2>
                        <span class="title-line"><i class="fa fa-car"></i></span>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
                    </div>
                </div>
                <!-- Page Title End -->
            </div>
        </div>
    </section>
    <section id="lgoin-page-wrap" class="section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ order.id }}</td>
                        </tr>
                        <tr>
                            <th>Userid</th>
                            <td>{{ order.userid }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ order.name }}</td>
                        </tr>
                        <tr>
                            <th>Lastname</th>
                            <td>{{ order.lastname }}</td>
                        </tr>
                        <tr>
                            <th>Address</th>
                            <td>{{ order.address }}</td>
                        </tr>
                        <tr>
                            <th>Phone</th>
                            <td>{{ order.phone }}</td>
                        </tr>
                        <tr>
                            <th>City</th>
                            <td>{{ order.city }}</td>
                        </tr>
                        <tr>
                            <th>Shipinfo</th>
                            <td>{{ order.shipinfo }}</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td><label class='badge badge-success'>{{ order.status }}</label></td>
                        </tr>
                        <tr>
                            <th>Amount</th>
                            <td>${{ order.amount }}</td>
                        </tr>
                        </tbody>
                    </table>

                    <table class="table">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Car Title</th>
                            <th>Car Image</th>
                            <th>Days</th>
                            <th>Price</th>
                            <th>Total</th>
                            <th>Status</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% set total = 0 %}
                        {% for order in orders %}
                            {% set total = total + (order.amount) %}
                            <tr>
                                <td>{{ order.id }}</td>
                                <td>{{ order.title }}</td>
                                <td><img src = "{{ asset('uploads/images/') ~ order.image }}" width="150" height="100"></td>
                                <td>{{ order.days }}</td>
                                <td>${{ order.price}}</td>
                                <td>${{ order.amount }}</td>
                                <td><label class='badge badge-success'>{{ order.status }}</label></td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="13">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <h6><b>Total Price: ${{ total }}</b></h6>

                    <a href="{{ path('orders_index') }}"><button class="btn btn-dark"><i class="ik ik-arrow-left"></i>back to list</button></a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
