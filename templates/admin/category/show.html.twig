{% extends 'adminbase.html.twig' %}

{% set name = 'Category' %}
{% block title %}{{ name }}{% endblock %}
{% block nav %}Category{% endblock %}
{% block sub_nav %}{{ name }}{% endblock %}

{% block body %}
        <div class="card">
            <div class="card-header"><h1>{{ name }}</h1></div>
            <div class="card-body">

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ category.title }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ category.status ? "<label class='badge badge-success'>True</label>" : "<label class='badge badge-danger'>False</label>" }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ category.updatedAt ? category.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_category_index') }}"><button class="btn btn-dark"><i class="ik ik-arrow-left"></i>back to list</button></a>

    <a href="{{ path('admin_category_edit', {'id': category.id}) }}"><button class="btn btn-dark"><i class="ik ik-edit-2"></i>edit</button></a><br><br>

    {{ include('admin/category/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
