{% extends 'adminbase.html.twig' %}

{% set name = 'Comment' %}
{% block title %}{{ name }}{% endblock %}
{% block nav %}Comment{% endblock %}
{% block sub_nav %}{{ name }}{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header"><h1>{{ name }}</h1></div>
    <div class="card-body">

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ comment.comment }}</td>
            </tr>
            <tr>
                <th>Car</th>
                <td>{{ comment.title }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ comment.name }} {{ comment.lastname }}</td>
            </tr>
            <tr>
                <th>Rate</th>
                <td>
                    <select id="car_star" class="rating-star form-control" name="car[star]" autocomplete="off">
                        <option value="1" {{ 1 <= comment.rate ? 'selected' }}>1</option>
                        <option value="2" {{ 2 <= comment.rate ? 'selected' }}>2</option>
                        <option value="3" {{ 3 <= comment.rate ? 'selected' }}>3</option>
                        <option value="4" {{ 4 <= comment.rate ? 'selected' }}>3</option>
                        <option value="5" {{ 5 <= comment.rate ? 'selected' }}>3</option>
                    </select>
                </td>
            </tr>
            <tr>
                <th>Ip</th>
                <td>{{ comment.ip }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ comment.status ? "<label class='badge badge-success'>True</label>" : "<label class='badge badge-danger'>False</label>" }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ comment.created_at ? comment.created_at|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ comment.updated_at ? comment.updated_at|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

        <a href="{{ path('admin_comment_index') }}"><button class="btn btn-dark"><i class="ik ik-arrow-left"></i>back to list</button></a>

        <a href="{{ path('admin_comment_edit', {'id': comment.id}) }}"><button class="btn btn-dark"><i class="ik ik-edit-2"></i>edit</button></a><br><br>

    {{ include('admin/comment/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
