{% extends 'adminbase.html.twig' %}

{% set name = 'Car' %}
{% block title %}{{ name }}{% endblock %}
{% block nav %}Car{% endblock %}
{% block sub_nav %}{{ name }}{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header"><h1>{{ name }}</h1></div>
    <div class="card-body">

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ car.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ car.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ car.description }}</td>
            </tr>
            <tr>
                <th>Keywords</th>
                <td>{{ car.keywords }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src = "{{ asset('uploads/images/') ~ car.image }}" width="500" height="250"></td>
            </tr>
            <tr>
                <th>Star</th>
                <td>
                    <select id="car_star" class="rating-star form-control" name="car[star]" autocomplete="off">
                        <option value="1" {{ 1 <= car.star ? 'selected' }}>1</option>
                        <option value="2" {{ 2 <= car.star ? 'selected' }}>2</option>
                        <option value="3" {{ 3 <= car.star ? 'selected' }}>3</option>
                        <option value="4" {{ 4 <= car.star ? 'selected' }}>3</option>
                        <option value="5" {{ 5 <= car.star ? 'selected' }}>3</option>
                    </select>
                </td>
            </tr>
            <tr>
                <th>Price</th>
                <td>${{ car.price }}</td>
            </tr>
            <tr>
                <th>Fuel</th>
                <td>{{ car.fuel }}</td>
            </tr>
            <tr>
                <th>Doors</th>
                <td>{{ car.doors }}</td>
            </tr>
            <tr>
                <th>Gearbox</th>
                <td>{{ car.gearbox }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ car.status ? "<label class='badge badge-success'>True</label>" : "<label class='badge badge-danger'>False</label>" }}</td>
            </tr>
            <tr>
                <th>Abs</th>
                <td>{{ car.abs ? "<label class='badge badge-success'>True</label>" : "<label class='badge badge-danger'>False</label>" }}</td>
            </tr>
            <tr>
                <th>Airbag</th>
                <td>{{ car.airbag ? "<label class='badge badge-success'>True</label>" : "<label class='badge badge-danger'>False</label>" }}</td>
            </tr>
            <tr>
                <th>Bluetooth</th>
                <td>{{ car.bluetooth ? "<label class='badge badge-success'>True</label>" : "<label class='badge badge-danger'>False</label>" }}</td>
            </tr>
            <tr>
                <th>Carkit</th>
                <td>{{ car.carkit ? "<label class='badge badge-success'>True</label>" : "<label class='badge badge-danger'>False</label>" }}</td>
            </tr>
            <tr>
                <th>Gps</th>
                <td>{{ car.gps ? "<label class='badge badge-success'>True</label>" : "<label class='badge badge-danger'>False</label>" }}</td>
            </tr>
            <tr>
                <th>Remote_start</th>
                <td>{{ car.remoteStart ? "<label class='badge badge-success'>True</label>" : "<label class='badge badge-danger'>False</label>" }}</td>
            </tr>
            <tr>
                <th>Parking_cameras</th>
                <td>{{ car.parkingCameras ? "<label class='badge badge-success'>True</label>" : "<label class='badge badge-danger'>False</label>" }}</td>
            </tr>
            <tr>
                <th>Music</th>
                <td>{{ car.music ? "<label class='badge badge-success'>True</label>" : "<label class='badge badge-danger'>False</label>" }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ car.createdAt ? car.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ car.updatedAt ? car.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Detail</th>
                <td>{{ car.detail|raw }}</td>
            </tr>
        </tbody>
    </table>

        <a href="{{ path('admin_car_index') }}"><button class="btn btn-dark"><i class="ik ik-arrow-left"></i>back to list</button></a>

        <a href="{{ path('admin_car_edit', {'id': car.id}) }}"><button class="btn btn-dark"><i class="ik ik-edit-2"></i>edit</button></a><br><br>

    {{ include('admin/car/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
