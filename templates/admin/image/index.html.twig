{% extends 'adminbase.html.twig' %}

{% set name = 'Image Index' %}
{% block title %}{{ name }}{% endblock %}
{% block nav %}Image{% endblock %}
{% block sub_nav %}{{ name }}{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header"><h1>{{ name }}</h1></div>
    <div class="card-body">


        {% if flag == true %}
        <a href="{{ path('admin_image_new') }}"><button class="btn btn-info"><i class="ik ik-share"></i>Create new</button></a><br><br>
        {% endif %}


        <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Car</th>
                <th>Title</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for image in images %}
            <tr>
                <td>{{ image.id }}</td>
                <td>{% if cars is defined %}{{ cars.title}}{% else %}{{ image.car }}{% endif %}</td>
                <td>{{ image.title }}</td>
                <td><img src = "{{ asset('uploads/images/') ~ image.image }}" width="150" height="100"></td>
                <td>
                    <div class="table-actions" style="text-align:left;">
                        <!--<a href="{{ path('admin_image_show', {'id': image.id}) }}"><i class="ik ik-eye text-blue"></i></a>
                        <a href="{{ path('admin_image_edit', {'id': image.id}) }}"><i class="ik ik-edit-2 text-green"></i></a>-->

                        <a>{{ include('admin/image/_delete_form.html.twig', {'style': 'ik ik-edit f-16 mr-15 text-green'}) }}</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>
{% endblock %}