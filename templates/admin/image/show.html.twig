{% extends 'adminbase.html.twig' %}

{% set name = 'Image' %}
{% block title %}{{ name }}{% endblock %}
{% block nav %}Image{% endblock %}
{% block sub_nav %}{{ name }}{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header"><h1>{{ name }}</h1></div>
    <div class="card-body">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ image.id }}</td>
            </tr>
            <tr>
                <th>Car Title</th>
                <td>{{ image.car }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ image.title }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src = "{{ asset('uploads/images/') ~ image.image }}" width="500" height="250"></td>
            </tr>
        </tbody>
    </table>

        <a href="{{ path('admin_image_index') }}"><button class="btn btn-dark"><i class="ik ik-arrow-left"></i>back to list</button></a>

        <a href="{{ path('admin_image_edit', {'id': image.id}) }}"><button class="btn btn-dark"><i class="ik ik-edit-2"></i>edit</button></a><br><br>

    {{ include('admin/image/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
