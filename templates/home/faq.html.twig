{% extends 'homebase.html.twig' %}


{% block title %}Faq | {{ setting.title }}{% endblock %}
{% block description %}{{ setting.description }}{% endblock %}
{% block keywords %}{{ setting.keywords }}{% endblock %}

{% block body %}
    <section id="page-title-area" class="section-padding overlay">
        <div class="container">
            <div class="row">
                <!-- Page Title Start -->
                <div class="col-lg-12">
                    <div class="section-title  text-center">
                        <h2>Faq</h2>
                        <span class="title-line"><i class="fa fa-car"></i></span>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
                    </div>
                </div>
                <!-- Page Title End -->
            </div>
        </div>
    </section>

    <!--== FAQ Area Start ==-->
    <section id="faq-page-area" class="section-padding">
        <div class="container">
            <div class="row">
                <!-- FAQ Content Start -->
                <div class="col-lg-12">
                    <div class="faq-details-content">
                        <!-- Single FAQ Subject  Start -->
                        <div class="single-faq-sub">
                            <div class="single-faq-sub-content">
                                <div id="accordion">
                                    {% set count = 0 %}
                                    {% for faq in faqs %}
                                        {% set count = count + 1 %}
                                    <!-- Single FAQ Start -->
                                    <div class="card">
                                        <div class="card-header" id="headingOne" data-toggle="collapse" data-target="#{{ faq.id }}" aria-expanded="true" aria-controls="{{ faq.id }}">
                                            <h5 class="mb-0"><button class="btn btn-link" style="width:100%;" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                                    <span>{{ faq.question }}</span>
                                                    <i class="fa fa-angle-down"></i>
                                                    <i class="fa fa-angle-up"></i>
                                                </button></h5>
                                        </div>

                                        <div id="{{ faq.id }}" class="collapse {% if count == 1 %}show{% endif %}" aria-labelledby="headingOne" data-parent="#accordion">
                                            <div class="card-body">
                                                {{ faq.answer }}
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Single FAQ End -->
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                        <!-- Single FAQ Subject End -->
                    </div>
                </div>
                <!-- FAQ Content End -->
            </div>
        </div>
    </section>
    <!--== FAQ Area End ==-->
{% endblock %}
